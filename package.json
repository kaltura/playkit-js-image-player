    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-loader": "^8.2.4",
    "chai": "^4.3.6",
    "css-loader": "^6.7.1",
    "eslint": "^7.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "promise-polyfill": "^8.2.3",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "sinon": "^14.0.0",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "typedoc": "^0.23.14",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.1"
  },
  "peerDependencies": {
    "@playkit-js/playkit-js": "^0.80.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
